# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.java text eol=lf
*.kt text eol=lf
*.kts text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.properties text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ts text eol=lf
*.js text eol=lf

# Shell scripts should use LF
*.sh text eol=lf
gradlew text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.jar binary
*.zip binary
*.png binary
*.jpg binary
*.gif binary
*.ico binary
